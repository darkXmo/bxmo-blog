{
  "name": "bxmo-blog",
  "version": "0.1.0",
  "description": "xmo个人博客，前端采用Vue3.0+Typescript技术，同时包含git commit规范和docker部署方案。",
  "main": "index.js",
  "scripts": {
    "commit": "npm run clean && git add . && git-cz",
    "changelog": "conventional-changelog -p angular -i ./CHANGELOG.md -s -r 0",
    "deploy": "cd deploy && sh deploy.sh && cd ..",
    "clean": "cd frontend && rm -rf dist && cd .."
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/dXmo/bxmo-blog.git"
  },
  "keywords": [
    "Vue3.0",
    "Typescript"
  ],
  "author": "Xmo",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1"
  },
  "lint-staged": {
    "frontend/src/**/*.vue": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "frontend/src/**/*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "frontend/src/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
